<h1>Listing games</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Esrb</th>
    <th>Description</th>
    <th>Console</th>
    <th>Players</th>
    <th>Image location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.title %></td>
    <td><%= game.esrb %></td>
    <td><%= game.description %></td>
    <td><%= game.console %></td>
    <td><%= game.players %></td>
    <td><%= game.image_location %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

